<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Home_Screen">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/home"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/home"/>
        <TextView
            android:textStyle="bold"
            android:gravity="center"
            android:text="Dashboard"
            android:textColor="#059680"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
         <LinearLayout
             android:background="@drawable/shape"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="5dp"
             android:layout_marginRight="5dp"
             android:layout_marginBottom="5dp"
             android:layout_width="match_parent"
             android:layout_height="150dp"
             android:orientation="vertical">
             <TextView
                 android:layout_marginTop="5dp"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="5dp"
                 android:layout_marginBottom="5dp"
                 android:textSize="20dp"
                 android:textColor="@color/black"
                 android:text="Lampu 1"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"/>
             <TextView
                 android:id="@+id/statuslampu1"
                 android:layout_marginTop="5dp"
                 android:layout_marginLeft="5dp"
                 android:layout_marginRight="5dp"
                 android:layout_marginBottom="5dp"
                 android:textSize="20dp"
                 android:textColor="@color/black"
                 android:text="Off"
                 android:layout_width="match_parent"
                 android:layout_height="30dp"/>
             <LinearLayout
                 android:layout_gravity="center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content">
                 <Switch
                     android:id="@+id/lampu1"
                     android:gravity="center"
                     android:layout_gravity="center"
                     android:layout_width="100dp"
                     android:layout_height="50dp"/>
                 <ImageView
                     android:onClick="goto_jadwal"
                     android:id="@+id/jam1"
                     android:src="@drawable/ic_time"
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:layout_marginBottom="10dp"/>
             </LinearLayout>

         </LinearLayout>
            <LinearLayout
                android:background="@drawable/shape"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Lampu 2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/statuslampu2"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Off"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Switch
                        android:id="@+id/lampu2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>
                    <ImageView
                        android:onClick="goto_jadwal2"
                        android:id="@+id/jam2"
                        android:src="@drawable/ic_time"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/shape"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Lampu Tengah"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/statuslampu3"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Off"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
<!--                <Switch-->
<!--                    android:id="@+id/lampu3"-->
<!--                    android:gravity="center"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_width="100dp"-->
<!--                    android:layout_height="50dp"/>-->
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Switch
                        android:id="@+id/lampu3"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>
                    <ImageView
                        android:onClick="goto_jadwal3"
                        android:id="@+id/jam3"
                        android:src="@drawable/ic_time"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/shape"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Televisi"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/txttv"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Off"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Switch
                        android:id="@+id/televisi"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>
                    <ImageView
                        android:onClick="goto_jadwaltv"
                        android:id="@+id/jamtv"
                        android:src="@drawable/ic_time"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/shape"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Ac"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
                <TextView
                    android:id="@+id/txtsuhu"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:text="Off"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>
                <EditText
                    android:id="@+id/suhu"
                    android:background="@color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Masukan Nila Celcius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:textSize="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <Switch
                        android:id="@+id/ac"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="50dp"/>
                    <ImageView
                        android:onClick="goto_jadwalac"
                        android:id="@+id/jamac"
                        android:src="@drawable/ic_time"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="1.0"
            android:textColor="#059680"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>

</ScrollView>